// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/java
{
	"name": "IngeSoft Java",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/base:ubuntu-22.04",

	"features": {
		"ghcr.io/devcontainers/features/java:1": {
			"version": "24",
			"jdkDistro": "graalce",
			"installMaven": "true",
			"mavenVersion": "3.9.9"
		},
		"ghcr.io/devcontainers/features/docker-in-docker:2": {} 
	},

	// Configure tool-specific properties.
	"customizations": {
		// Configure properties specific to VS Code.
		"vscode": {
			// Set *default* container specific settings.json values on container create.
			"settings": { 
				"plantuml.render": "Local",
				"plantuml.jar": "",
				"plantuml.server": "https://www.plantuml.com/plantuml/",
				"plantuml.java": "/usr/local/sdkman/candidates/java/current/bin/java",
				"plantuml.exportFormat": "png",
				"plantuml.diagramsRoot": "/docs/uml",
				"plantuml.exportOutDir": "/docs/images"			
			},
			
			// Add the IDs of extensions you want installed when the container is created.
			// Abril 2025 -- use extensions supported in OpenVSX
			"extensions": [
				"redhat.java@1.40.0",
				"vscjava.vscode-java-test@0.43.0",
				"vscjava.vscode-java-debug",
				"vscjava.vscode-java-dependency",
				"vscjava.vscode-maven",
				"visualstudioexptteam.vscodeintellicode",
				"vmware.vscode-spring-boot",
				"vscjava.vscode-spring-initializr",
				"vscjava.vscode-spring-boot-dashboard",
				"ms-vscode.live-server",
				"jebbs.plantuml",
				"vsls-contrib.codetour",
				"ms-azuretools.vscode-docker"
			]
		}
	}

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "java -version",

	// Configure tool-specific properties.
	// "customizations": {},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
